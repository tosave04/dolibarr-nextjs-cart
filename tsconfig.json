{
	"compilerOptions": {
		"module": "commonjs",
		"lib": ["dom", "es2017"],
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["jest", "@testing-library/jest-dom", "node"]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.test.ts", "src/**/*.test.tsx", "jest.setup.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
